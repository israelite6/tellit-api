// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Permission {
  id         String @id @default(cuid())
  permission String

  RolePermission RolePermission[]
  @@map("permissions")
}

model RolePermission {
  id           String     @id @default(cuid())
  permissionId String
  roleId       String
  permission   Permission @relation(references: [id], fields: [permissionId])
  role         Role       @relation(references: [id], fields: [roleId], onDelete: Cascade)
  created_at   DateTime?  @default(now())
  updated_at   DateTime?
  deleted_at   DateTime?

  @@map("role_permission")
}

model Role {
  id              String           @id @default(cuid())
  role            String
  RolePermissions RolePermission[]
  User            User[]
  created_at      DateTime?        @default(now())
  updated_at      DateTime?
  deleted_at      DateTime?

  @@map("roles")
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  firstName   String
  lastName    String
  middleName  String?
  username    String    @unique
  address     String?
  phoneNumber String    @unique
  password    String
  gender      Gender?
  roleId      String?
  role        Role?     @relation(references: [id], fields: [roleId])
  created_at  DateTime? @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  @@map("users")
}

enum Gender {
  FEMALE
  MALE
}
